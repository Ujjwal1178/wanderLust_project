<% if(success.length){ %>
    <div class="alert alert-success width-flash  mt-5 " role="alert">
        <%= success  %>
        <button type="button"
        style="float: right;"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"></button>
    </div>
<% } %>

<% if(error.length){ %>
    <div class="alert alert-danger width-flash mt-5" role="alert">
        <%= error  %>
        <button type="button"
        style="float: right;"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"></button>
    </div>
<% } %>





